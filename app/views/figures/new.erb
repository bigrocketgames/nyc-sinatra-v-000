<h1>Create a new figure!</h1>
<form action="/figures" method="POST">
  <label>Figure Name: </label>
  <input type="text" name="figure[name]" id="figure_name">
  <br>
  <!-- Checkboxes for titles -->
  <label>Select the appropriate title(s): </label>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= title.name %>
  <% end %>
  <br>
  <label>and/or create a new title: </label>
  <input type="text" name="title[name]" id="new_title">
  <br>

  <!-- Checkboxes for landmarks -->
  <label>Select the approriate landmark(s): </label>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %>
  <% end %>
  <br>
  <label>and/or create a new landmark: </label>
  <input type="text" name="landmark[name]" id="new_landmark">

  <input type="submit" name="Submit" id="Create New Figure">
</form>
