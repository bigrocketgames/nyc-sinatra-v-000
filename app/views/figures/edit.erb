<h1>Edit <%= @figure.name %>!</h1>
<form action="/figures/<%= @figure.id %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <label>Figure Name: </label>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">
  <br>
  <!-- Checkboxes for titles -->
  <label>Select the appropriate title(s): </label>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>" <%= 'checked' if @figure.title_ids.include?(title.id) %>><%= title.name %>
  <% end %>
  <br>
  <label>and/or create a new title: </label>
  <input type="text" name="title[name]" id="new_title">
  <br>

  <!-- Checkboxes for landmarks -->
  <label>Select the approriate landmark(s): </label>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>" <%= 'checked' if @figure.landmark_ids.include?(landmark.id) %>><%= landmark.name %>
  <% end %>
  <br>
  <label>and/or create a new landmark: </label>
  <input type="text" name="landmark[name]" id="new_landmark">

  <input type="submit" name="Submit" id="Edit Figure">
</form>
